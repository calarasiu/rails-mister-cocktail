<div class = "container">
<%=link_to "Cocktails list", root_path%>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 400, width: 400, crop: :fill %>
<% else %>
  <%= cl_image_tag("https://res.cloudinary.com/chirilac/image/upload/c_fit,h_4993/v1590354557/home_ngdmwp.jpg", height: 400, width: 400) %>
<% end %>
  
<h3><%=@cocktail.name%></h3>
<h4>Recipe</h4>
<table>
  <tbody>
    <thead>
      <th>Ingredient</th>
      <th>Description</th>
      <th>Action</th>
    </thead>
      <%@cocktail.doses.each do |dose|%>
    <tr>
      <td><%=dose.ingredient.name%></td>
      <td><%=dose.description%></td>
      <td>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
      </td>
      <%end%>
    </tr>
  </tbody>
</table>

<%= render "doses/new", cocktail: @cocktail, dose: @dose%>
</div>

